<h1><%= title %></h1>

  <table id="suggestion_table">
    <thead>
      <tr>
        <td>Meal</td>
        <td>Suggested By</td>
        <td>Accept</td>
      </tr>
    </thead>
    <tbody>

      <% for (var i = 0; i < suggestions.length; i++) { %>
        <tr><td><%= suggestions[i].meal_name %></td><td><%= users_name[i].name %></td><td><form action="/suggestions/<%= suggestions[i].id %>/accepted" method="post"><input type="submit" value="Accept"></form></td></tr>
      <% } %>

    </tbody>
  </table>

  <div id="edit_user" class="user_div">
    <h2>Edit User Info</h2>
    <form action="/suggestions/<%= user.name %>/edit" method="post">
      <label for="name">Name: </label>
      <input type="text" name="name" class="user_input" value="<%= user.name %>">
      <label for="email">Email: </label>
      <input type="text" name="email" class="user_input" value="<%= user.email %>">
      <label for="about">About: </label>
      <textarea name="about" rows="3" cols="80" class="user_input"><%= user.about %></textarea>
      <input type="submit" name="edit" value="Edit" class="user_input">
    </form>
  </div>
